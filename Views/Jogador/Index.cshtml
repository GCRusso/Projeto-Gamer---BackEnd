@model Jogador

@{
    //aqui é o titulo que fica na página, titulo de browser
    ViewData["Title"] = "Jogador";
}

<h1>CADASTRO DE JOGADORES</h1>

@*todo CADASTRO DE JOGADORES*@
<form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label for="">Nome</label>
    <input type="text" name="Nome">

    <label for="">Email</label>
    <input type="text" email="Email">

    <label for="">Senha</label>
    <input type="password" senha="Senha">

    <div class="form-row align-items-center">
        <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Selecione a Equipe</label>
            <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option selected hidden>Escolher</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>

        <button type = "submit">Cadastrar</button>
</form>

@*todo TABELA DOS JOGADORES*@
<table class="table tabl-striped table-responsive">

    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Imagem</th>
    </thead>

    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.NomeJogador</td>
                <td>@jogador.Email</td>
                <td><img src="@jogador.Equipe.Imagem" alt="Imagem da Equipe @jogador.Equipe.NomeEquipe"></td>
            </tr>
        }
    </tbody>




</table>